{
  "name": "@tree-house/errors",
  "version": "1.2.1",
  "description": "NodeJS default error definitions with an error parser utility function",
  "keywords": [
    "NodeJS",
    "Treehouse",
    "API",
    "Secure",
    "Customisable"
  ],
  "homepage": "https://github.com/knor-el-snor/tree-house/tree/master/packages/core#readme",
  "bugs": {
    "url": "https://github.com/knor-el-snor/tree-house/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/knor-el-snor/tree-house.git"
  },
  "license": "ISC",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf ./build",
    "lint": "tslint 'src/**/*.ts'",
    "prepare": "npm run build",
    "prepublish": "npm run build",
    "pretest": "npm run build",
    "test": "jest",
    "test:coverage": "jest --coverage --collectCoverageFrom=src/**/*.ts",
    "test:watch": "jest --watchAll"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm run build"
    }
  },
  "dependencies": {
    "@tree-house/translations": "^1.1.1",
    "http-status": "~1.5.0",
    "i18n": "0.10.0",
    "safe-json-stringify": "~1.2.0",
    "uuid": "8.2.0"
  },
  "devDependencies": {
    "@types/http-status": "~1.1.2",
    "@types/i18n": "~0.8.6",
    "@types/jest": "26.0.7",
    "@types/uuid": "7.0.3",
    "coveralls": "3.1.0",
    "husky": "4.2.5",
    "jest": "26.1.0",
    "rimraf": "~3.0.2",
    "supertest": "~4.0.2",
    "ts-jest": "26.1.3",
    "tslint": "6.1.2",
    "tslint-config-airbnb": "~5.11.2",
    "typescript": "3.9.7"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}

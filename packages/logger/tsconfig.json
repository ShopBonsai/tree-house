{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "lib": ["ES2019"],
    "sourceMap": false,
    "outDir": "./build",
    "rootDir": "./src",

    "moduleResolution": "node",
    "baseUrl": "./",
    "typeRoots": ["node_modules/@types"],
    "declaration": true,

    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "paths": {
      "*": ["node_modules/*", "types/*"]
    }
  },
  "exclude": ["node_modules", "tests", "build"]
}
